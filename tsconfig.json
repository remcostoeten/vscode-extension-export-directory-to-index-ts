{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": [
			"es2016",
			"dom"
		],
		"outDir": "out",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src"
	]
}
